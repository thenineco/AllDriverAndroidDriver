<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/main_container_margin"
            android:layout_marginRight="@dimen/main_container_margin"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Эти данные видны вашим клиентам"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Михаил Забелин"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Возраст"
                    android:textColor="@color/colorBlack"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:text="45 лет"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMaterialGray400"/>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Стаж вождения"
                    android:textColor="@color/colorBlack"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:text="15 лет"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMaterialGray400"/>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Категория вождения"
                    android:textColor="@color/colorBlack"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:text="B,C"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMaterialGray400"/>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Международные права"
                    android:textColor="@color/colorBlack"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:text="Есть"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMaterialGray400"/>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Курение"
                    android:textColor="@color/colorBlack"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:text="нет"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorMaterialGray400"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="О себе"
                android:textColor="@color/colorBlack"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Спокойный, вмеру упитаный, веселый. Катаюсь на лыжах"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorMaterialGray400"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Автомобили которыми управлял"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorMaterialGray300"
                    android:src="@mipmap/ic_launcher"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorMaterialGray400"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:text='Если вы нашли ошибку в тексте, информация не соответствует действительности или хотите что то добавить о себе, нажмите "Хочу поправить". После проверим информацию и обновим ее в системе.'/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/driver_info_start_change_info_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/main_container_margin"
                android:layout_marginRight="@dimen/main_container_margin"
                android:background="?attr/colorPrimaryDark"
                android:text="Хочу поправить"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <com.soberdriver.driverapp.ui.view.AppCustomToolbar
            android:id="@+id/driver_info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/driver_info_back_btn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_arrow_back_white"/>
    </FrameLayout>

</FrameLayout>
